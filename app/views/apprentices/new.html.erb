<h1>New Apprentice for <%= @knight.name %></h1>

<%= form_with(model: [@knight, @apprentice], local: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :is_knighted %>
    <%= form.check_box :is_knighted %>
  </div>

  <div>
    <%= form.label :age %>
    <%= form.number_field :age %>
  </div>

  <div>
    <%= form.submit 'Create Apprentice' %>
  </div>
<% end %>

<%= link_to 'Back to Apprentices', knight_apprentices_path(@knight) %>
