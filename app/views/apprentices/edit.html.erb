<h1>Edit Apprentice</h1>

<%= form_with(model: @apprentice, local: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :is_knighted %>
    <%= form.check_box :is_knighted %>
  </div>

  <div>
    <%= form.label :age %>
    <%= form.number_field :age %>
  </div>

  <div>
    <%= form.submit 'Update Apprentice' %>
  </div>
<% end %>

<%= link_to 'Back to Apprentice', apprentice_path(@apprentice) %>
<%= link_to 'Back to Knights', knights_path %>
