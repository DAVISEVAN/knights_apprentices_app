<h1>Edit Knight</h1>

<%= form_with(model: @knight, local: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :is_active %>
    <%= form.check_box :is_active %>
  </div>

  <div>
    <%= form.label :number_of_quests %>
    <%= form.number_field :number_of_quests %>
  </div>

  <div>
    <%= form.submit 'Update Knight' %>
  </div>
<% end %>

<%= link_to 'Back to Knights', knights_path %>
<%= link_to 'Back to Knight', knight_path(@knight) %>
